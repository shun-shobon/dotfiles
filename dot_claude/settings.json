{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Edit(./**)",
      "Read(./**)",
      "WebFetch",
      "WebSearch",
      "Write(./**)"
    ],
    "deny": [
      "Bash(git push -f:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(rm -rf:*)",
      "Read(**/.dev.vars)",
      "Read(**/.env.*)",
      "Read(**/.env)",
      "Read(**/.npmrc)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git switch:*)",
      "Bash(rm:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/notify.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@2.0.23",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": true,
  "plansDirectory": ".claude/plans"
}
