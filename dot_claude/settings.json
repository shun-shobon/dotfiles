{
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "bash ~/.claude/notify.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "language": "Japanese",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Edit(./**)",
      "Read(./**)",
      "WebFetch",
      "WebSearch",
      "Write(./**)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git switch:*)",
      "Bash(rm:*)"
    ],
    "deny": [
      "Bash(git push -f:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(rm -rf:*)",
      "Read(**/.dev.vars)",
      "Read(**/.env.*)",
      "Read(**/.env)",
      "Read(**/.npmrc)"
    ]
  }
}
