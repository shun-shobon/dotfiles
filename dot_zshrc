# エディタとしてnvimを使用する
EDITOR="nvim"

# mise読み込み
eval "$(mise activate zsh)"

# sheldon読み込み
eval "$(sheldon source)"

# zabrze読み込み
eval "$(zabrze init --bind-keys)"

# ローカルユーザーを補完に出さない
zstyle ':completion:*:*:(ssh|scp|sftp):*' tag-order hosts -users

# 補完機能有効化
autoload -Uz compinit
compinit

eval "$(mise completion zsh)"

# Starship読み込み
eval "$(starship init zsh)"

# エイリアス設定
alias ls="lsd"
alias ll="ls -l"
alias la="ls -al"
