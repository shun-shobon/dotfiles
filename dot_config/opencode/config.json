{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "rm*": "ask",
      "git*": "allow",
      "cat*": "allow",
      "ls*": "allow",
      "mkdir*": "allow",
      "echo*": "allow",
      "find*": "allow",
      "wc*": "allow",
      "tr*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "rg*": "allow",
      "grep*": "allow",
      "test*": "allow",
      "pnpm*": "allow",
      "pnpm install*": "ask",
      "pnpm add*": "ask"
    },
    "read": {
      ".dev.vars": "deny"
    },
    "context7_*": "allow"
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp/oauth"
    }
  },
  "plugin": [
    "opencode-gemini-auth@latest",
    "@shun-shobon/opencode-caffeinate@latest"
  ]
}
